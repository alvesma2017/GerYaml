                <th scope="col">VALOR</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row">1</th>
                <td>apiVersion:</td>
                <td><input type="text" placeholder="valor" class="form-control" name="apiversion"></td>
           
